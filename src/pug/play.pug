                  li.collection-item.avatar.blue.lighten-2
                    i.circle.grey.darken-2.text K
                    span.white-text Kevin Xiao
                    p.white-text 0 PTS
              #game.col.s12.m12.l9
                #game-canvas-wrapper
                  #game-canvas.white
            #play-wrapper-2.col.s12.m12.l3
              #chat
                .chat-body.blue.lighten-2
                  #chat-top
                    .row
                      button.col.s4.btn.waves-effect.waves-light Ready
                      button.col.s4.btn.waves-effect.waves-light Invite
                      button.col.s4.btn.waves-effect.waves-light Cheater
                  #chat-content.blue.lighten-4
                  #chat-send.blue.lighten-5
                    input(type='text')
  include template/footer