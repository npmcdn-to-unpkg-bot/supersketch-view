                    p.lvl.yellow-text LVL 10-49
                  li.collection-item.avatar.blue.lighten-2
                    i.circle.grey.darken-2.text K
                    span.white-text Kevin Xiao
                    p.white-text 0 PTS
                    p.lvl.pink-text.text-darken-1 LVL 50-99
                  li.collection-item.avatar.blue.lighten-2
                    i.circle.grey.darken-2.text K
                    span.white-text Kevin Xiao
                    p.white-text 100 PTS
